{
  "name": "@principium/theme",
  "version": "0.0.1",
  "description": "A modern, accessible theme system for building design systems with Tailwind CSS",
  "keywords": [
    "theme",
    "tailwind",
    "design-system",
    "ui",
    "components"
  ],
  "author": "Principium",
  "homepage": "https://principium.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/rarescovei5/principium",
    "directory": "packages/core/theme"
  },
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/rarescovei5/principium/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.16.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.2",
    "clean-package": "^2.2.0"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "@principium/variants": "workspace:*"
  },
  "clean-package": "../../clean-package.config.json"
}
