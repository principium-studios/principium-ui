{
  "name": "@principium/theme",
  "version": "0.0.1",
  "description": "A modern, accessible theme system for building design systems with Tailwind CSS",
  "keywords": [
    "theme",
    "tailwind",
    "design-system",
    "ui",
    "components"
  ],
  "author": "Principium",
  "homepage": "https://principium.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/rarescovei5/principium",
    "directory": "packages/core/theme"
  },
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "bugs": {
    "url": "https://github.com/rarescovei5/principium/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.16.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.2"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "1.0.0"
  }
}
