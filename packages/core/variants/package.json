{
  "name": "@principium/variants",
  "version": "0.0.2",
  "description": "A powerful and flexible variant system for building component libraries with TypeScript support",
  "keywords": [
    "variants",
    "tailwind",
    "typescript",
    "react",
    "css-in-js",
    "styling",
    "component-library",
    "design-system"
  ],
  "author": "Principium <support@principium.dev>",
  "homepage": "https://principium.dev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rarescovei5/principium",
    "directory": "packages/core/variants"
  },
  "sideEffects": false,
  "main": "src/index.ts",
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/rarescovei5/principium/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.13",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.16.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.2",
    "clean-package": "^2.2.0",
    "clsx": "^2.1.1"
  },
  "clean-package": "../../../clean-package.config.json"
}