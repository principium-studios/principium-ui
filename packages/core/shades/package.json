{
  "name": "@principium/shades",
  "version": "0.0.2",
  "description": "A plugin for Tailwind CSS to generate a theme consisting of shades of colors and a base color.",
  "keywords": [
    "shades",
    "tailwind",
    "design-system"
  ],
  "author": "Principium <support@principium.dev>",
  "homepage": "https://github.com/principium-studios/principium",
  "repository": {
    "type": "git",
    "url": "https://github.com/principium-studios/principium",
    "directory": "packages/core/shades"
  },
  "license": "MIT",
  "main": "src/index.ts",
  "sideEffects": false,
  "files": [
    "dist",
    "!dist/**/*.test.*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/principium-studios/principium/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "eslint": "^9.16.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.2",
    "clean-package": "^2.2.0"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "clean-package": "../../../clean-package.config.json"
}
