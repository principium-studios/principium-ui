  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.13",
    "eslint": "^9.16.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.2",
    "clean-package": "^2.2.0"
  },
  "dependencies": {
    "@principium/ripple": "workspace:*",
