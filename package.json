{
  "name": "principium",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.2.0",
  "scripts": {
    "dev": "vite",
    "dev:pkg": "pnpm dev --filter @principium/utils",
    "build": "turbo run build",
    "build:fast": "turbo run build:fast",
    "type:check": "turbo run type:check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "create:pkg": "plop package"
  },
  "dependencies": {
    "@principium/utils": "workspace:*",
    "@principium/button": "workspace:*",
    "@tailwindcss/vite": "^4.1.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "3.2.4",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "plop": "^4.0.1",
    "turbo": "^2.5.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0"
  }
}
